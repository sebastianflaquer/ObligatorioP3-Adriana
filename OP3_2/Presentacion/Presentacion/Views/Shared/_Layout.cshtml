<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/styles.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OBLIGATORIO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">                

                @if (Convert.ToBoolean(Session["logueado"]) == false)
                {   
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Registro", "Create", "Usuarios")</li>
                        <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav">

                        @if (Session["rol"].ToString() == "Jefe")
                        {
                        
                        <li>@Html.ActionLink("Cargar Archivos", "LeerArchivo", "Home")</li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Usuarios <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Lisa de Usuarios", "Index", "Usuarios")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Barrios <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Lista de Barrios", "Index", "Barrios")</li>
                                <li>@Html.ActionLink("Editar", "Edit", "Barrios")</li>
                            </ul>
                        </li>

                        }

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Viviendas <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Lista de Viviendas", "Index", "Viviendas")</li>
                                @if (Session["rol"].ToString() == "Jefe")
                                {
                                    <li>@Html.ActionLink("Cambiar Estado Vivienda", "ModificarVivienda", "Viviendas")</li>
                                }
                                <li>@Html.ActionLink("Buscar Vivienda", "BuscarVivienda", "Viviendas")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sorteos <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Lista de Sorteos", "Index", "Sorteos")</li>

                                @if (Session["rol"].ToString() == "Jefe")
                                {
                                    <li>@Html.ActionLink("Crear Nuevo Sorteo", "Create", "Sorteos")</li>
                                }
                            </ul>
                        </li>
                    </ul>

                    <ul id="divMenuLogeado" class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><b><i class="glyphicon glyphicon-user"></i> @Session["email"]</b></a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li>@Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home")</li>
                            </ul>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>