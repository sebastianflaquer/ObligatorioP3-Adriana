@model Dominio.Models.Sorteo

@{
    ViewBag.Title = "Inscribir Usuario";
}

<h2>InscribirUsuario</h2>
<br />
@if (Model == null)
{
    <h4>Ya estas inscripto a este Sorteo</h4>
    <div>
        @Html.ActionLink("Volver a la Lista", "Index")
    </div>
}
else
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Sorteo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Hora, new { htmlAttributes = new { @class = "form-control" } })

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Inscribirme al Sorteo" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver a la Lista", "Index")
    </div>
}






